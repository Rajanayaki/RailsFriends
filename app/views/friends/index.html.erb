
<h1>Friends</h1>

<div id="friends">

  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Instagram</th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |f| %>
        <% if f.user == current_user %>
          <tr>
            <td><%= link_to f.first_name + ' '+ f.last_name ,method: :get %></td>
            <td><%= f.email%></td>
            <td><%= f.instagram%></td>
            <td>
              <%= button_to "Delete", f,form: {data: {turbo_confirm: 'Are you sure?'}},method: :delete ,class: "btn btn-danger"%>
            </td>
          </tr>
        <%end%>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to "New friend", new_friend_path , class: "btn btn-dark"%>
